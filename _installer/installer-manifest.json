{
  "installerVersion": "1.0.0",
  "modules": [
    {
      "id": "scss",
      "name": "SCSS Support",
      "description": "Integrates Sass/SCSS preprocessor for styling.",
      "type": "styling",
      "selected": true,
      "devDependencies": {
        "sass": "^1.94.1"
      },
      "filesToDeleteIfDeselected": [
        "src/scss/demo-page.scss",
        "src/scss/variables.module.scss"
      ],
      "nextConfigModifications": {
        "removeIfDeselected": "sassOptions"
      }
    },
    {
      "id": "mdx",
      "name": "MDX Support (Markdown Pages)",
      "description": "Ermöglicht das Schreiben von React-Komponenten in Markdown (.mdx).",
      "type": "features",
      "selected": true,
      "dependencies": {
        "@mdx-js/loader": "^3.1.1",
        "@mdx-js/react": "^3.1.1",
        "@next/mdx": "16.0.3"
      },
      "devDependencies": {
        "@types/mdx": "^2.0.13"
      },
      "filesToDeleteIfDeselected": [
        "mdx-components.tsx",
        "src/app/[lang]/mdx-page"
      ],
      "nextConfigModifications": {
        "removeWrapper": "withMDX",
        "removeFromPageExtensions": "mdx"
      }
    },
    {
      "id": "tailwind-typography",
      "name": "Tailwind CSS Typography",
      "description": "Fügt Standard-Typografieformatierungen für Prosa-Text hinzu.",
      "type": "styling",
      "selected": true,
      "dependencies": {
        "@tailwindcss/typography": "^0.5.19"
      },
      "filesToDeleteIfDeselected": [
        "src/app/[lang]/tailwind-typography"
      ],
      "cssModifications": [
        {
          "file": "src/styles/main.css",
          "removeLineContaining": "@plugin '@tailwindcss/typography';"
        }
      ]
    }
  ]
}
