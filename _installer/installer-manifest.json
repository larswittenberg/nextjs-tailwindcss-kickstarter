{
  "installerVersion": "2.0.0",
  "modules": [
    {
      "id": "scss",
      "name": "SCSS Support",
      "description": "Adds support for SASS/SCSS.",
      "type": "styling",
      "selected": true,
      "devDependencies": { "sass": "^1.94.1" },
      "filesToCopy": [
        { "from": "scss/app/[lang]/scss-page", "to": "src/app/[lang]/scss-page" }
      ],
      "nextConfigModifications": { "addSassOptions": true }
    },
    {
      "id": "mdx",
      "name": "MDX Support",
      "description": "Enables the use of .mdx files as pages.",
      "type": "features",
      "selected": true,
      "dependencies": {
        "@mdx-js/loader": "^3.1.1",
        "@mdx-js/react": "^3.1.1",
        "@next/mdx": "16.0.3"
      },
      "devDependencies": { "@types/mdx": "^2.0.13" },
      "filesToCopy": [
        { "from": "mdx/mdx-components.tsx", "to": "mdx-components.tsx" },
        { "from": "mdx/app/[lang]/mdx-page", "to": "src/app/[lang]/mdx-page"}
      ],
      "nextConfigModifications": { "addMdxWrapper": true }
    },
    {
      "id": "tailwind-typography",
      "name": "Tailwind CSS Typography",
      "description": "Adds the @tailwindcss/typography plugin.",
      "type": "styling",
      "selected": true,
      "dependencies": { "@tailwindcss/typography": "^0.5.19" },
      "filesToCopy": [{ "from": "tailwind-typography/app/[lang]/tailwind-typography", "to": "src/app/[lang]/tailwind-typography" }],
      "cssModifications": { "addPlugin": "@plugin '@tailwindcss/typography';" }
    },
    {
      "id": "shadcn-ui",
      "name": "shadcn/ui",
      "description": "Integrates the shadcn/ui component library.",
      "type": "features",
      "selected": true,
      "dependencies": {
        "class-variance-authority": "^0.7.0",
        "lucide-react": "^0.417.0",
        "tailwind-merge": "^2.4.0"
      },
      "devDependencies": { "shadcn-ui": "^0.9.5" },
      "filesToCopy": [
          { "from": "shadcn/components.json", "to": "components.json"},
          { "from": "shadcn/src/lib", "to": "src/lib"},
          { "from": "shadcn/src/components/ui", "to": "src/components/ui"}
      ],
      "cssModifications": {
        "addBlock": {
          "anchor": "/* --- shadcn-ui theme start --- */",
          "content": "/* --- shadcn-ui theme start --- */\n\t--background: 0 0% 100%;\n    --foreground: 222.2 84% 4.9%;\n    --card: 0 0% 100%;\n    --card-foreground: 222.2 84% 4.9%;\n    --popover: 0 0% 100%;\n    --popover-foreground: 222.2 84% 4.9%;\n    --primary: 222.2 47.4% 11.2%;\n    --primary-foreground: 210 40% 98%;\n    --secondary: 210 40% 96.1%;\n    --secondary-foreground: 222.2 47.4% 11.2%;\n    --muted: 210 40% 96.1%;\n    --muted-foreground: 215.4 16.3% 46.9%;\n    --accent: 210 40% 96.1%;\n    --accent-foreground: 222.2 47.4% 11.2%;\n    --destructive: 0 84.2% 60.2%;\n    --destructive-foreground: 210 40% 98%;\n    --border: 214.3 31.8% 91.4%;\n    --input: 214.3 31.8% 91.4%;\n    --ring: 222.2 84% 4.9%;\n    --radius: 0.5rem;\n\t/* --- shadcn-ui theme end --- */\n"
        }
      }
    }
  ]
}
